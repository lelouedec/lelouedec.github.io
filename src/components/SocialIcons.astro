    <SocialIcon icon_size={icon_size} URL="https://www.linkedin.com/in/justin-lelou%C3%ABdec-5a1a9698/" icon="linkedin"/>
    <SocialIcon icon_size={icon_size} URL="mailto:justin.lelouedec@gmail.com" icon="envelope-fill"/>
